{
    "name": "Soju Redirect",
    "description": "Redirects Spotify links to Soju",
    "manifest_version": 2,
    "version": "1.0",
    "background": {
        "scripts": [
            "redirect.js"
        ],
        "persistent": true
    },
    "icons": {},
    "content_scripts": [
        {
            "matches": [
                "*://open.spotify.com/*"
            ],
            "js": [
                "redirect.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://open.spotify.com/*"
    ]
}